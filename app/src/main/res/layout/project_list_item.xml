<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="15dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginStart="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="10dp"
    android:layout_marginEnd="15dp"
    android:clickable="true"
     android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:paddingBottom="8dp"
    android:paddingEnd="8dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/project_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/mutual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/project_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="Save Souls"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/project_avatar"
        app:layout_constraintTop_toTopOf="@+id/project_avatar" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/project_contibute_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="3000"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/project_contibute_amount2"
        app:layout_constraintTop_toTopOf="@+id/project_title_tv" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/project_contibute_amount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="/"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/project_contibute_amount"
        app:layout_constraintEnd_toStartOf="@+id/project_total_tv"
        app:layout_constraintTop_toTopOf="@+id/project_contibute_amount"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/project_total_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="40000"
        android:textColor="#C4C4C4"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/project_contibute_amount2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/project_contibute_amount2" />

    <com.white.progressview.HorizontalProgressView
        android:id="@+id/project_progress"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginStart="20dp"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:progress="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/project_avatar"
        app:layout_constraintTop_toBottomOf="@+id/project_title_tv"
        app:progressReachColor="@color/colorPrimary"
        app:progressTextColor="@color/colorPrimary"
        app:progressTextVisible="true" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/materialTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/raleway"
        android:text="By :"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/project_progress"
        app:layout_constraintTop_toBottomOf="@+id/project_progress" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:id="@+id/project_ownername_tv"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="Isiyemi Joseph"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@+id/materialTextView3"
        app:layout_constraintStart_toEndOf="@+id/materialTextView3"
        app:layout_constraintTop_toTopOf="@+id/materialTextView3" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
